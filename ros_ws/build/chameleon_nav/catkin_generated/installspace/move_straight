#!/usr/bin/env python3

import rospy
from geometry_msgs.msg import Twist

if __name__=="__main__":
    rospy.init_node('chemeleon_nav')
    pub = rospy.Publisher('cmd_vel', Twist, queue_size=10)

    while(1):
        twist = Twist()

        twist.linear.x = 0.001
        twist.linear.y = 0.0
        twist.linear.z = 0.0
        twist.angular.x = 0.0
        twist.angular.y = 0.0
        twist.angular.z = 0.0

        pub.publish(twist)